<div id="agregar-formulario" class="modal hide fade modal-register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
  	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h2 class="text-center">Agregar Formulario</h2>
  </div>
	<div class="modal-body">
		<%= simple_form_for(@formulario_curso) do |f| %>
		<%= f.error_notification %>
		<%= display_base_errors resource %>
		<%= f.input :formulario_id, :collection => Formulario.where(:tipo => curso.programa.tipo).collect{ |p| [p.codigo + " - " + p.nombre, p.id] }, :label => false, :prompt => "Formulario", :input_html => { :class => "input-block-level" } %>
		<%= f.input :curso_id, :as => :hidden, :input_html => { :value =>  curso.id  } %>
		<%= f.input :estado, :as => :hidden, :input_html => { :value => "Pendiente" } %>
	</div>
	<div class="modal-footer">
		  <%= f.button :submit, "Agregar", :class => 'btn-info' %>
		<% end %>
		<a href="#" class="btn" data-dismiss="modal">Cerrar</a>
	</div>
</div>