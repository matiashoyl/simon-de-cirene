<div>
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3 class="text-center">Nuevo Curso</h3>
	</div>
	<div class="modal-body">
		<%= simple_form_for(@curso) do |f| %>
		<%= f.error_notification %>
		<%= display_base_errors resource %>
		<%= f.input :programa_id, :collection => Programa.all.collect{ |p| [p.nombre, p.id] }, :label => false, :prompt => "Programa", :input_html => { :class => "input-block-level" } %>
		<%= f.input :codigo, :autofocus => true, :label => false, :placeholder => 'Código', :input_html => { :class => "input-block-level" } %>
		<%= f.input :nombre, :label => false, :placeholder => 'Nombre', :input_html => { :class => "input-block-level" } %>
		<%= f.input :comuna, :collection => SimonDeCirene::Application::COMUNAS, :label => false, :prompt => "Selecciona una comuna", :input_html => { :class => "input-block-level" } %>
		<%= f.input :relator_jefe_id, :collection => (User.with_role :relator).collect{ |p| [p.name, p.id] }, :label => false, :prompt => "Relator Jefe", :input_html => { :class => "input-block-level"} %>
		<input class="hidden" id="index" name="index" type="hidden" value="<%= index %>">
	</div>
	<div class="modal-footer">
		<%= f.button :submit, "Crear", :class => 'btn-info' %>
		<% end %>
		<a href="#" class="btn" data-dismiss="modal">Cerrar</a>
	</div>
</div>