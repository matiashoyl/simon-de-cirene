<div id="edit-curso-<%= curso.id %>" class="modal hide fade modal-register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
  	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h2 class="text-center">Editar</h2>
  </div>
	<div class="modal-body">
		<%= simple_form_for curso, :url => curso_path(curso), :html => {:method => :put } do |f| %>
		<%= f.error_notification %>
		<%= display_base_errors resource %>
		<p>Programa:</p>
		<%= f.input :programa_id, :collection => Programa.all.collect{ |p| [p.nombre, p.id] }, :label => false, :prompt => "Programa", :input_html => { :class => "input-block-level" } %>
		<p>Código:</p>
		<%= f.input :codigo, :autofocus => true, :label => false, :placeholder => curso.codigo, :input_html => { :class => "input-block-level" } %>
		<p>Nombre:</p>
  		<%= f.input :nombre, :label => false, :placeholder => curso.nombre, :input_html => { :class => "input-block-level" } %>
  		<p>Comuna:</p>
  		<%= f.input :comuna, :collection => SimonDeCirene::Application::COMUNAS, :label => false, :selected => curso.comuna, :input_html => { :class => "input-block-level" } %>
  		<p>Relator Jefe:</p>
  		<%= f.input :relator_jefe_id, :collection => (User.with_role :relator).collect{ |p| [p.name, p.id] }, :label => false, :prompt => "", :input_html => { :class => "input-block-level" } %>
  		<input class="hidden" id="index" name="index" type="hidden" value="<%= index %>">
	</div>
	<div class="modal-footer">
		  <%= f.button :submit, "Cambiar", :class => 'btn-info' %>
		<% end %>
		<a href="#" class="btn" data-dismiss="modal">Cerrar</a>
	</div>
</div>