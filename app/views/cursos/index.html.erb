<div class="span2"></div>
<div class="span8">
  <h3>Cursos</h3>
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Codigo</th>
        <th>Nombre</th>
        <th>Comuna</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cursos.each do |curso| %>
        <tr>
          <td><%= curso.codigo %></td>
          <td><%= curso.nombre %></td>
          <td><%= curso.comuna %></td>
          <td><%= link_to 'Show', curso %></td>
          <td><%= link_to 'Edit', edit_curso_path(curso) %></td>
          <td><%= link_to 'Destroy', curso, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <a data-toggle="modal" href="#new-curso" class="btn btn-mini btn-info" type="button">Crear Curso</a>
  <%= render 'new' %>
</div>