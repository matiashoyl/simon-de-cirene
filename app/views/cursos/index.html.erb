<div class="span3"></div>
<div class="span6">
  <h3>Cursos</h3>
  <% if @cursos.any? %>
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th>Codigo</th>
          <th>Nombre</th>
          <th>Comuna</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cursos.each do |curso| %>
          <tr>
            <td><%= curso.codigo %></td>
            <td><%= curso.nombre %></td>
            <td><%= curso.comuna %></td>
            <td>
              <div class="btn-group">
                <%= link_to("Ver", curso, :class => 'btn btn-mini') %>
                <a data-toggle="modal" href="#edit-curso-<%= curso.id %>" class="btn btn-mini" type="button">Editar</a>
                <a data-toggle="modal" href="#delete-curso-<%= curso.id %>" class="btn btn-mini btn-inverse" type="button">Eliminar</a>
              </div>
              <%= render curso %>
              <%= render :partial => 'eliminar_curso', :locals => {:curso => curso} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <br />
  <% end %>
  <a data-toggle="modal" href="#new-curso" class="btn btn-mini btn-info" type="button">Crear Curso</a>
  <%= render 'new' %>
</div>