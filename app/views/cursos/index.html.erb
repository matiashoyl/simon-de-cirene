<div class="span2"></div>
<div class="span8">
  <h3>Cursos</h3>
  <% if @programas.any? %>
    <% if @cursos.any? %>
      <table class="table table-condensed table-striped">
        <thead>
          <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Comuna</th>
            <th>Programa</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cursos.each do |curso| %>
            <tr>
              <td><%= curso.codigo %></td>
              <td><%= curso.nombre %></td>
              <td><%= curso.comuna %></td>
              <td><%= Programa.find(curso.programa_id).nombre %></td>
              <td>
                <div class="btn-group">
                  <%= link_to("Ver", curso, :class => 'btn btn-mini') %>
                  <a data-toggle="modal" href="#edit-curso-<%= curso.id %>" class="btn btn-mini" type="button">Editar</a>
                  <a data-toggle="modal" href="#delete-curso-<%= curso.id %>" class="btn btn-mini btn-inverse" type="button">Eliminar</a>
                </div>
                <%= render :partial => 'curso', :locals => {:curso => curso, :index => true} %>
                <%= render :partial => 'eliminar_curso', :locals => {:curso => curso} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h5>No hay cursos inscritos</h5>
    <% end %>
    <a data-toggle="modal" href="#new-curso" class="btn btn-mini btn-info" type="button">Crear Curso</a>
    <%= render :partial => 'new', :locals => {:curso => @curso, :index => true} %>
  <% else %>
    <h5>Debes crear un programa para crear un curso</h5>
  <% end %>
</div>