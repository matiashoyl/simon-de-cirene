<div class="span2"></div>
<div class="span8">
  <h3>Mensajes</h3>
  <% if @mensajes.any? %>
    <table class="table table-condensed table-striped sortable">
      <thead>
        <tr>
          <th>Mensaje</th>
          <th>Receptores</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @mensajes.each do |mensaje| %>
          <tr>
            <td>
              <span data-content="<%= mensaje.cuerpo %>" rel="popover" data-placement="bottom" data-original-title="<%=mensaje.titulo%>" data-html="true" class="sesion-popover"><%= mensaje.titulo %></span>
            </td>
            <td><%= mensaje.receptores_string %></td>
            <td>
              <div class="btn-group">
                <%= link_to('<i class="icon-pencil"></i>'.html_safe, edit_mensaje_path(mensaje), remote: true, :class => 'btn btn-mini') %>
                <%= link_to('<i class="icon-trash icon-white"></i>'.html_safe, delete_mensaje_path(mensaje), remote: true, class: "btn btn-mini btn-inverse") %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <br />
  <% end %>
  <%= link_to("Nuevo Mensaje", new_mensaje_path, remote: true, :class => 'btn btn-mini btn-info') %>
  <div id="mensaje-modal" class="modal hide fade modal-mensaje"></div>
</div>