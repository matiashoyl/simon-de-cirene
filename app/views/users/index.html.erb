<div class="span3"></div>
<div class="span6">
  <h3>Usuarios</h3>
  <table class="table table-condensed table-striped sortable">
    <thead>
      <tr>
        <th>Usuario</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini btn-block" type="button"><%= user.roles.first.name.titleize unless user.roles.first.nil? %></a>
          <%= render user %>
        </td>
        <td><%= link_to('<i class="icon-trash icon-white"></i>'.html_safe, delete_user_path(user), remote: true, class: "btn btn-mini btn-inverse") %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to "Crear Usuario", new_user_path, remote: true, class: "btn btn-info btn-mini" %>
  <div id="user-modal" class="modal hide fade modal-medium"></div>
</div>
