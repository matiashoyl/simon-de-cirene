<div id="delete-user-<%= user.id %>" class="modal hide fade modal-register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
  	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h2>Eliminar</h2>
  </div>
	<div class="modal-body">
		<p>Estás a punto de eliminar el usuario</p>
		<br />
		<h4 align="center"><%= user.name %></h4>
		<br />
	</div>
	<div class="modal-footer">
		<%= link_to("Eliminar", user_path(user), :method => :delete, :class => 'btn btn-inverse') %>
		<a href="#" class="btn" data-dismiss="modal">Cancelar</a>
	</div>
</div>