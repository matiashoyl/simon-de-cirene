<div id="asignar-formulario-<%= formulario.id %>" class="modal hide fade modal-asignar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3>Asignar Formulario <%= formulario.nombre %></h3>
    </div>
    <div class="modal-body">
      <%= form_tag(asignar_formularios_path, :method=>'post') do%>
      <%= select_tag 'cursos_ids[]', options_for_select(Curso.all.map {|c| [c.codigo + " - " + c.nombre, c.id]}), :multiple => true, :class => "input-block-level", :id => "select-formulario-" + formulario.id.to_s %>
      <input type="hidden" id="formulario_id" name="formulario_id" value="<%= formulario.id %>" />
    </div>
    <script type="text/javascript">
      $("#select-formulario-<%= formulario.id %>").select2();
    </script>
    <div class="modal-footer">
      <%= submit_tag "Asignar", :class => "btn btn-info" %>
      <% end %>
      <a class="btn" data-dismiss="modal" href="#">Cerrar</a>
    </div>
</div>
