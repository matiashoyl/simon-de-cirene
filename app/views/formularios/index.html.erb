                <%= link_to('<i class="icon-trash icon-white"></i>'.html_safe, delete_formulario_path(formulario), remote: true, class: "btn btn-mini btn-inverse") %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <br />
  <% end %>
