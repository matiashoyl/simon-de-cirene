<div class="span2"></div>
<div class="span8">
  <h3>Formularios</h3>
  <% if @formularios.any? %>
    <table class="table table-condensed table-striped sortable">
      <thead>
        <tr>
          <th>CÃ³digo</th>
          <th>Nombre</th>
          <th>Tipo</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @formularios.each do |formulario| %>
          <tr>
            <td><%= formulario.codigo %></td>
            <td><%= formulario.nombre %></td>
            <td><%= formulario.tipo %></td>
