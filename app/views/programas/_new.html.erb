<div id="new-programa" class="modal hide fade modal-register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
  	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h2>Nuevo Programa</h2>
  </div>
	<div class="modal-body">
		<%= simple_form_for(@programa) do |f| %>
		<%= f.error_notification %>
		<%= display_base_errors resource %>
  		<%= f.input :nombre, :autofocus => true, :label => false, :placeholder => 'Nombre', :class => 'input-block-level' %>
  		<p>Tipo:</p>
  		<%= f.input :tipo, :collection => ['Social', 'Microempresas'], :label => false, :prompt => "", :class => 'input-block-level' %>
	</div>
	<div class="modal-footer">
		  <%= f.button :submit, "Crear", :class => 'btn-info' %>
		<% end %>
		<a href="#" class="btn" data-dismiss="modal">Cerrar</a>
	</div>
</div>