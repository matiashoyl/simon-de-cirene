<div class="span3">
  <ul class="nav nav-tabs nav-stacked sesions-sidenav affix">
    <% if @programas_sociales %>
      <h5>Área Social</h5>
      <% @programas_sociales.each do |programa_social| %>
        <% if programa_social.id == @programa.id %>
          <li class="active">
            <a href="#">
              <i class="icon-chevron-right pull-right"></i>
              <%= programa_social.nombre %>
            </a>
          </li>
        <% else %>
          <li>
            <a href="/programas/<%=programa_social.id%>">
              <i class="icon-chevron-right pull-right"></i>
              <%= programa_social.nombre %>
            </a>
          </li>
        <% end %>
      <% end %>
    <% end %>
    <% if @programas_microempresas %>
      <h5>Área Microempresas</h5>
      <% @programas_microempresas.each do |programas_microempresas| %>
        <% if programas_microempresas.id == @programa.id %>
          <li class="active">
            <a href="#">
              <i class="icon-chevron-right pull-right"></i>
              <%= programas_microempresas.nombre %>
            </a>
          </li>
        <% else %>
          <li>
            <a href="/programas/<%=programas_microempresas.id%>">
              <i class="icon-chevron-right pull-right"></i>
              <%= programas_microempresas.nombre %>
            </a>
          </li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
<div class="span1"></div>
<div class="span8">
  <%= render 'layouts/messages' %>
  <div class="page-header">
    <h1><%= @programa.nombre %> <small>Área <%= @programa.tipo %></small></h1>
  </div>
	<br />
	<% if @cursos.any? %>
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th>Codigo</th>
          <th>Nombre</th>
          <th>Comuna</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cursos.each do |curso| %>
          <tr>
            <td><%= curso.codigo %></td>
            <td><%= curso.nombre %></td>
            <td><%= curso.comuna %></td>
            <td>
                <div class="btn-group">
                  <%= link_to("Ver", curso, :class => 'btn btn-mini') %>
                  <a data-toggle="modal" href="#edit-curso-<%= curso.id %>" class="btn btn-mini" type="button">Editar</a>
                  <a data-toggle="modal" href="#delete-curso-<%= curso.id %>" class="btn btn-mini btn-inverse" type="button">Eliminar</a>
                </div>
                <%= render :partial => 'cursos/curso', :locals => {:curso => curso, :index => false} %>
                <%= render :partial => 'cursos/eliminar_curso', :locals => {:curso => curso} %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h4>No hay cursos en este programa</h4>
    <br />
  <% end %>
  <a data-toggle="modal" href="#new-curso" class="btn btn-mini btn-info" type="button">Agregar Curso</a>
  <%= render :partial => 'new_curso', :locals => {:curso => @curso, :index => false, :programa => @programa} %>
</div>
