<% if user_signed_in? %>
	<% if current_user.has_role? :relator %>
		<div class="span4">
			<% current_user.mensajes.each do |mensaje| %>
				<% if mensaje.caracter == "Positivo" %>
					<div class="alert alert-success">
				<% elsif mensaje.caracter == "Neutro" %>
					<div class="alert alert-block">
				<% elsif mensaje.caracter == "Negativo" %>
					<div class="alert alert-error">
				<% else %>
					<div class="alert alert-info">
				<% end %>
					<h4><%= mensaje.titulo %></h4>
					<p><%= mensaje.cuerpo %></p>
				</div>
			<% end %>
		</div>
		<div class="span8">
			<% if @formularios_sin_contestar.any? %>
				<h3>Formularios sin contestar</h3>
				<table class="table table-condensed">
					<thead>
					    <tr>
					      <th>Codigo</th>
					      <th>Formulario</th>
					      <th>Curso</th>
					      <th></th>
					    </tr>
					</thead>
					<tbody>
					  <% @formularios_sin_contestar.each_with_index do |formulario, index| %>
					    <tr>
					      <td><%= formulario.codigo %></td>
					      <td><%= formulario.nombre %></td>
					      <td><%= @cursos_formularios_sin_contestar[index].nombre %></td>
					      <td><%= link_to "Contestar", curso_formulario_path(:curso_id => @cursos_formularios_sin_contestar[index], :formulario_id => formulario), :class => 'btn btn-mini' %></td>
					    </tr>
					  <% end %>
					</tbody>
				</table>
			<% end %>
			<% if @alumnos_con_tres_o_mas_inasistencias.any? %>
				<h3>Alumnos con tres o m치s inasistencias</h3>
				<table class="table table-condensed">
					<thead>
					    <tr>
					      <th>Nombre</th>
					      <th>Curso</th>
					      <th>Inasistencias</th>
					      <th></th>
					    </tr>
					</thead>
					<tbody>
					  <% @alumnos_con_tres_o_mas_inasistencias.each_with_index do |alumno, index| %>
					    <tr>
					      <td><%= alumno.nombre %> <%= alumno.apellido_paterno %></td>
					      <td><%= @cursos_alumnos_con_tres_o_mas_inasistencias[index].nombre %></td>
					      <td><%= alumno.numero_inasistencias(@cursos_alumnos_con_tres_o_mas_inasistencias[index]) %></td>
					      <td><%= link_to "Ver Curso", sesion_curso_path(@cursos_alumnos_con_tres_o_mas_inasistencias[index]), :class => 'btn btn-mini' %></td>
					    </tr>
					  <% end %>
					</tbody>
				</table>
			<% end %>
		</div>
	<% else %>
		<% if @sesiones_pocos_asistentes.empty? && @sesiones_sin_asistencia.empty? && @alumnos_baja_asistencia.empty? %>
			<div class="span4"></div>
			<div class="span4">
				<br /><br /><br /><br /><br /><br />
				<img src="/images/logo.png" alt="Sim칩n de Cirene" />
				<h4 class="text-center">Todo est치 bajo control</h4>
			</div>
		<% else %>
			<div class="span6">
				<% if @sesiones_pocos_asistentes.any? %>
					<h3>Sesiones Con Asistencia Bajo 85%</h3>
					<table class="table table-condensed table-striped">
						<thead>
						    <tr>
						      <th>Tema</th>
						      <th>Curso</th>
						      <th>Relator</th>
						      <th>Asistentes</th>
						    </tr>
						</thead>
						<tbody>
						  <% @sesiones_pocos_asistentes.each do |sesion| %>
						    <tr>
						      <td><%= sesion.tema %></td>
						      <td><%= sesion.curso.nombre %></td>
						      <td><%= sesion.relator.name %></td>
						      <td><%= sesion.porcentaje_asistentes %>%</td>
						    </tr>
						  <% end %>
						</tbody>
					</table>
				<% end %>
				<% if @sesiones_sin_asistencia.any? %>
					<hr>
					<h3>Sesiones Sin Asistencia</h3>
					<table class="table table-condensed table-striped">
						<thead>
						    <tr>
						      <th>Tema</th>
						      <th>Curso</th>
						      <th>Relator</th>
						      <th>Fecha</th>
						    </tr>
						</thead>
						<tbody>
						  <% @sesiones_sin_asistencia.each do |sesion| %>
						    <tr>
						      <td><%= sesion.tema %></td>
						      <td><%= sesion.curso.nombre %></td>
						      <td><%= sesion.relator.name %></td>
						      <td><%= sesion.fecha.strftime("%d %b, %Y") %></td>
						    </tr>
						  <% end %>
						</tbody>
					</table>
				<% end %>
			</div>
			<div class="span6">
				<% if @alumnos_baja_asistencia.any? %>
					<h3>Alumnos Con Baja Asistencia</h3>
				    <table class="table table-condensed table-striped">
				      <thead>
				          <tr>
				            <th>Nombre</th>
				            <th>Curso</th>
				            <th>Asistencia</th>
				          </tr>
				      </thead>
				      <tbody>
				        <% @alumnos_baja_asistencia.each_with_index do |alumno, index| %>
				          <tr>
				            <td><%= alumno.nombre %> <%= alumno.apellido_paterno %></td>
				            <td><%= @curso_alumno_baja_asistencia[index].nombre %></td>
				            <td><%= @bajas_asistencias[index] %>%</td>
				          </tr>
				        <% end %>
				      </tbody>
				    </table>
			  	<% end %>
			</div>
		<% end %>
	<% end %>
<% else %>
	<div class="span4"></div>
	<div class="span4">
		<br /><br /><br /><br /><br /><br />
		<img src="/images/logo.png" alt="Sim칩n de Cirene" />
	</div>
<% end %>