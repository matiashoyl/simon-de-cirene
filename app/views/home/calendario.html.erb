<%=link_to_function('<i class="icon-print"></i>'.html_safe, "javascript:print()", :class => 'btn btn-mini pull-right')%>
<div id='calendar'></div>
<% if @sesiones.any? %>
	<% @sesiones.each_with_index do |sesion, index| %>
		<% if current_user.has_role? :relator %>
			<script type="text/javascript">
				agregarEvento("Clase <%= @index[index] + 1 %> - <%= sesion.tema %> - <%= sesion.direccion %>", "<%= sesion.fecha %>", "<%= sesion.hora_inicio %>", "<%= sesion.hora_termino %>");
			</script>
		<% else %>
			<script type="text/javascript">
				agregarEvento("Clase <%= @index[index] + 1 %> - <%= sesion.relator.name %> - <%= sesion.curso.comuna %> - <%= sesion.direccion %>", "<%= sesion.fecha %>", "<%= sesion.hora_inicio %>", "<%= sesion.hora_termino %>");
			</script>
		<% end %>
	<% end %>
<% end %>
<div class="span1"></div>

