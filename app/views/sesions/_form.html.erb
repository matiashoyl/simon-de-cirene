<%= simple_form_for(@sesion) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :tema %>
    <%= f.input :hora_inicio %>
    <%= f.input :hora_termino %>
    <%= f.input :fecha %>
    <%= f.input :tipo %>
    <%= f.input :direccion %>
    <%= f.input :comentario %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
