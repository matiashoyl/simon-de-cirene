<% @sesions.each do |sesion| %>
  <tr>
    <td><%= sesion.tema %></td>
    <td><%= sesion.hora_inicio %></td>
    <td><%= sesion.hora_termino %></td>
    <td><%= sesion.fecha %></td>
    <td><%= sesion.tipo %></td>
    <td><%= sesion.direccion %></td>
    <td><%= sesion.comentario %></td>
    <td><%= link_to 'Show', sesion %></td>
    <td><%= link_to 'Edit', edit_sesion_path(sesion) %></td>
    <td><%= link_to 'Destroy', sesion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

