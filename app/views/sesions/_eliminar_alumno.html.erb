<div id="delete-alumno-<%= alumno.id %>" class="modal hide fade modal-register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
  	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h2>Eliminar</h2>
  </div>
	<div class="modal-body">
		<p>Estás a punto de eliminar al alumno</p>
		<br />
		<h4 align="center"><%= alumno.nombre %> <%= alumno.apellido_paterno %></h4>
		<br />
	</div>
	<div class="modal-footer">
		<%= form_for alumno, :method => :delete do %>
    		<input class="hidden" id="alumno_id" name="alumno_id" type="hidden" value="<%= alumno.id %>">
    		<input class="hidden" id="alumno_curso_id" name="curso_id" type="hidden" value="<%= curso.id %>">
			<%= submit_tag "Eliminar", :class => "btn btn-inverse" %>
		<% end %>
		<a href="#" class="btn" data-dismiss="modal">Cancelar</a>
	</div>
</div>