<div>
  <div class="modal-header">
  	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h2>Editar Sesión</h2>
  </div>
	<div class="modal-body">
		<%= simple_form_for(@sesion) do |f| %>
		<%= f.error_notification %>
		<%= display_base_errors resource %>
		<%= f.input :tema, :autofocus => true, :label => false, :placeholder => 'Tema', :class => 'input-block-level' %>
		<div class="input-append bootstrap-timepicker">
			<p>De: </p>
      		<input id="sesion_hora_inicio_edit_<%= @sesion.id %>" name="sesion[hora_inicio]" type="text" class="input-small">
      		<span class="add-on"><i class="icon-time"></i></span>
    	</div>
	    <div class="input-append bootstrap-timepicker">
	    	<p>Hasta: </p>
	        <input id="sesion_hora_termino_edit_<%= @sesion.id %>" name="sesion[hora_termino]" type="text" class="input-small">
	        <span class="add-on"><i class="icon-time"></i></span>
	    </div>
		<div class="input-append date">
			<p>Fecha: </p>
			<input type="text" data-behaviour='datepicker' class="string date_picker required" name="sesion[fecha]" id="sesion_fecha" value="<%= @sesion.fecha.strftime("%d/%m/%Y") %>">
			<script type="text/javascript">
				$('[data-behaviour~=datepicker]').datepicker({
				    format: "dd/mm/yyyy",
			        language: "es",
				    autoclose: true
				});
			</script>
		</div>
		<script type="text/javascript">setTimersEdit("#sesion_hora_inicio_edit_<%= @sesion.id %>", "#sesion_hora_termino_edit_<%= @sesion.id %>", "<%= @sesion.hora_inicio.strftime("%I:%M %p") %>", "<%= @sesion.hora_termino.strftime("%I:%M %p") %>");</script>
		<% if current_user.has_role? :relator %>
			<%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
		<% else %>
			<p>Relator: </p>
			<%= f.input :user_id, :collection => (User.with_role :relator).collect{ |p| [p.name, p.id] }, :label => false, :prompt => "", :class => 'input-block-level' %>
		<% end %>
  		<p>Tipo: </p>
  		<%= f.input :tipo, :collection => ['Exposición', 'Trabajo Práctico', 'Invitado', 'Dinámica', 'Otro'], :label => false, :prompt => "", :class => 'input-block-level' %>
      	<%= f.input :direccion, :label => false, :placeholder => 'Direccion', :class => 'input-block-level' %>
  		<%= f.input :comentario, :label => false, :placeholder => 'Comentario', :class => 'input-block-level'  %>
  		<%= f.input :curso_id, :as => :hidden, :input_html => { :value => @sesion.curso_id } %>
	</div>
	<div class="modal-footer">
		<%= f.button :submit, "Cambiar", :class => 'btn-info' %>
		<% end %>
		<a href="#" class="btn" data-dismiss="modal">Cerrar</a>
	</div>
</div>
